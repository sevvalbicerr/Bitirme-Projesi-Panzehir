<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navg_path"
            app:startDestination="@id/login">

    <fragment android:id="@+id/login"
              android:name="com.example.panzehir.view_Patient.loginsignup.Login"
              android:label="fragment_login"
              tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_login_to_signUp"
                app:destination="@id/signUp"/>
        <action android:id="@+id/action_login_to_home2" />
        <action android:id="@+id/action_login_to_forgotPassword"
                app:destination="@id/forgotPassword"/>
    </fragment>

    <fragment android:id="@+id/signUp" android:name="com.example.panzehir.view_Patient.loginsignup.SignUp"
              android:label="SignUp">
        <action android:id="@+id/action_signUp_to_login" app:destination="@id/login"/>
    </fragment>
    <fragment android:id="@+id/forgotPassword" android:name="com.example.panzehir.view_Patient.loginsignup.ForgotPassword"
              android:label="fragment_forgot_password" tools:layout="@layout/fragment_forgot_password">
        <action android:id="@+id/action_forgotPassword_to_login" app:destination="@id/login"/>
    </fragment>





</navigation>