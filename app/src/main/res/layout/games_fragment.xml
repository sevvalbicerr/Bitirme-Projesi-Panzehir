<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/games"
            android:textSize="35sp"
            android:id="@+id/gamesPageTitle"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"

    />
    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/shaperectangle"
            android:id="@+id/cardMachingGame"
            android:text="@string/cardMatching"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#545454" app:backgroundTint="#E59A97"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/shaperectangle"
            android:id="@+id/MazeGame"
            android:text="@string/mazeGame"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:backgroundTint="#E59A97"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/shaperectangle"
            android:id="@+id/sudoku"
            android:text="@string/sudoku"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:backgroundTint="#E59A97"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/shaperectangle"
            android:id="@+id/anagram"
            android:text="@string/anagram"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:backgroundTint="#E59A97"/>


</LinearLayout>

