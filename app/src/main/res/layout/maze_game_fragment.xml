<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/xmlBackground"
        tools:context=".view_Patient.games.mazegame.Maze">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
        >
            <Button
                    android:id="@+id/EasyLevel"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#121735"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_20sdp"
                    app:cornerRadius="15dp"
                    android:text="Kolay"/>
            <Button
                    android:id="@+id/MediumLevel"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#121735"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp"
                    android:text="Orta"/>
            <Button
                    android:id="@+id/HardLevel"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#121735"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp"
                    android:text="Zor"/>

            <Chronometer
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chronomether"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#5460A5"
                    android:textSize="@dimen/_15sdp"
            />
            <Button
                    android:id="@+id/NewGamebutton"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="wrap_content"
                    android:text="Yeni Oyun"
                    android:backgroundTint="#121735"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_10sdp"


            />

        </LinearLayout>

    </LinearLayout>
    <view android:layout_width="wrap_content"
          android:layout_height="392dp"
          class="com.example.panzehir.view_Patient.games.mazegame.MazeGeneration"
          android:id="@+id/view"
          android:layout_marginTop="@dimen/_50sdp"
          android:layout_marginBottom="@dimen/_80sdp"
          android:layout_marginStart="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_10sdp"

          android:background="@color/white"
    />


</LinearLayout>