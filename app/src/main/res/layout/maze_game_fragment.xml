<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/xmlBackground"
        tools:context=".view_Patient.games.mazegame.Maze">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_twotone_close_24"
                android:id="@+id/stopTimebutton"
                android:background="#5460A5"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"


        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#5460A5"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:id="@+id/playtimeButton"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
        />
        <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chronomether"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#5460A5"
        />
        <Button
                android:id="@+id/NewGamebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeni Oyun"
                android:backgroundTint="#121735"
                android:textColor="@color/white"
                app:cornerRadius="15dp"
                android:layout_marginStart="@dimen/_90sdp"

        />

    </LinearLayout>
    <view android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          class="com.example.panzehir.view_Patient.games.mazegame.MazeGeneration"
          android:id="@+id/view"
          android:layout_marginBottom="@dimen/_80sdp"
          android:layout_marginStart="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_10sdp"

          android:background="@color/white"
    />


</LinearLayout>