<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/xmlBackground"
            tools:context=".view_Patient.games.sudoku.Sudoku"
    >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_twotone_close_24"
                android:id="@+id/stopTimebutton"
                android:background="#5460A5"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"


        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#5460A5"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:id="@+id/playtimeButton"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
        />
        <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chronomether"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#5460A5"
        />
        <Button
                android:id="@+id/NewGamebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeni Oyun"
                android:backgroundTint="#121735"
                android:textColor="@color/white"
                app:cornerRadius="15dp"
                android:layout_marginStart="@dimen/_90sdp"

        />

    </LinearLayout>

    <com.example.panzehir.view_Patient.games.sudoku.canvas.SudokuBoardView
            android:id="@+id/sudokuBoardView"
            android:layout_width="@dimen/_350sdp"
            android:layout_gravity="center"
            android:layout_height="347dp"
            android:background="@color/white"
            android:layout_above="@id/buttonsLayout"
    />

    <GridLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="3"
            android:layout_gravity="center"
    >


        <Button
                android:id="@+id/oneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="1"/>

        <Button
                android:id="@+id/twoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="2"/>

        <Button
                android:id="@+id/threeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="3"/>
        <ImageButton
                android:id="@+id/notesButton"
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="#905460A5"
                app:srcCompat="@drawable/edit_pen_black"/>
        <Button
                android:id="@+id/solveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:backgroundTint="#121735"
                android:textColor="@color/white"
                app:cornerRadius="15dp"

                android:text="Çöz"/>

        <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_marginStart="@dimen/_25sdp"
                android:background="#5460A5"
                app:srcCompat="@drawable/delete_black"/>

        <Button
                android:id="@+id/fourButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="4"/>

        <Button
                android:id="@+id/fiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="5"/>

        <Button
                android:id="@+id/sixButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="6"/>

        <Button
                android:id="@+id/sevenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="7"/>

        <Button
                android:id="@+id/eightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="8"/>

        <Button
                android:id="@+id/nineButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:backgroundTint="#5460A5"
                app:cornerRadius="15dp"
                android:text="9"/>


    </GridLayout>


</LinearLayout>


