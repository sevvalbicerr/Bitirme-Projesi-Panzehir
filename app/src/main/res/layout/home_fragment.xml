<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xmlBackground"
        tools:context=".view.Home">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emeregency"
            android:layout_margin="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Acil Durum"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:paddingLeft="30dp"
            android:background="@drawable/shaperectangle"
            android:backgroundTint="#9A3737"
                  >
        <TextView

                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/callFamily"
                android:text="Ailemi Ara"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:padding="15dp"
                android:drawableTop="@drawable/ic_baseline_family_restroom_24"

        />
        <TextView

                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/callEmergency"
                android:text="Acil Durum Hattını Ara"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:padding="15dp"
                android:drawableTop="@drawable/ic_baseline_medical_services_24"

        />
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Profil"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/profile"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="210dp"

    >
        <ImageView
                android:layout_width="143dp"
                android:layout_height="178dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/photo"
                android:layout_marginStart="20dp"
        />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameOfPerson"
                    android:text="Meliha"
                    android:textSize="20sp"
                    android:textColor="@color/black"

            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/surnameOfPerson"
                android:text="Yılmaz"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="@color/black"

        />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ageOfPerson"
                    android:text="52"
                    android:textSize="20sp"
                    android:textColor="@color/black"

            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/typeOfBlood"
                    android:text="A RH+"
                    android:textSize="20sp"
                    android:textColor="@color/black"

            />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>