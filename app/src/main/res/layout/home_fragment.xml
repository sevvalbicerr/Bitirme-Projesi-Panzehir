<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xmlBackground"
        android:orientation="vertical"
        tools:context=".view.Home">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emeregency"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Acil Durum"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="@drawable/shaperectangle"
            android:backgroundTint="#9A3737"
    >
        <TextView

                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:id="@+id/callFamily"
                android:text="Ailemi Ara"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:padding="15dp"
                android:drawableTop="@drawable/ic_baseline_family_restroom_24"

        />
        <TextView

                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/callEmergency"
                android:text="Acil Durum Hattını Ara"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="15dp"
                android:drawableTop="@drawable/ic_baseline_medical_services_24"

        />
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Profil"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/profile"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="horizontal"
            android:background="@drawable/button_rectangle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

    >
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/photo"
                android:paddingTop="2dp"
               android:paddingBottom="2dp"

        />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameOfPerson"
                    android:text="Meliha Yılmaz"
                    android:textSize="15sp"
                    android:textColor="@color/black"

            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ageOfPerson"
                    android:text="52"
                    android:textSize="15sp"
                    android:textColor="@color/black"

            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/typeOfBlood"
                    android:text="A RH+"
                    android:textSize="15sp"
                    android:textColor="@color/black"

            />
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memories"
            android:text="@string/memories"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"

              />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
                  >
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="73dp"
                android:layout_height="66dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/memoriesCircle1"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="73dp"
                android:layout_height="66dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/memoriesCircle2"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="73dp"
                android:layout_height="66dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/memoriesCircle3"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="73dp"
                android:layout_height="66dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/memoriesCircle4"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="73dp"
                android:layout_height="66dp"
                android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24"
                android:id="@+id/memoriesCircle5"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/water"
                android:text="Su Takibi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:paddingTop="10dp"

        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/water"
                android:id="@+id/water1"
                android:layout_marginStart="30dp"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/water"
                android:id="@+id/water2"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/water"
                android:id="@+id/water3"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/water"
                android:id="@+id/water4"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/water"
                android:id="@+id/water5"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/water"
                android:id="@+id/water6"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/step"
                android:text="Adım Takibi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"

        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NumberOfStep"
                android:text="Adım sayısı:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingStart="76dp"
               />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NumberOfStepText"
                android:text="5610000 "
                android:textColor="@color/black"
                android:textSize="20sp"


        />
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/medicine"
            android:text="İlaç Takibi"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"


    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"

                  >
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="İlaç 1"
        />
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="İlaç 2"
        />
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="İlaç 3"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Daha fazlasını görmek için tıklayın."
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:paddingStart="5dp"
                android:textColor="@color/black"
        />
    </LinearLayout>
</LinearLayout>