<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xmlBackground"
        tools:context=".view_Patient.Home">

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/coordinatorLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
                android:id="@+id/publicFragment"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/signOut"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="end"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_home"/>

            <TextView
                    android:id="@+id/emergencyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Acil Durum"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_emergency"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="30dp"
                    android:id="@+id/EmergencyLinearLayout"
                    android:paddingEnd="30dp"
                    android:background="@drawable/button_rectangle_red"
                    android:backgroundTint="#9A3737" android:baselineAligned="false">

                <LinearLayout
                        android:id="@+id/callFamilyLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">
                    <ImageView
                            android:id="@+id/callFamilyImage"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_baseline_family_restroom_24"/>
                    <TextView
                            android:id="@+id/callFamilyText"
                            android:layout_width="142dp"
                            android:layout_height="match_parent"
                            android:text="Ailemi Ara"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="@dimen/_15ssp"
                            android:padding="@dimen/_10ssp"/>

                </LinearLayout>
                <LinearLayout android:id="@+id/callEmergencyLayout"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_weight="2"
                              android:orientation="vertical">
                    <ImageView
                            android:id="@+id/callEmergencyImage"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_emergency"/>
                    <TextView
                            android:id="@+id/callEmergencyText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Acil Durum Hattını Ara"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="@dimen/_15ssp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/profilTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="Profil"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_emergency"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/button_rectangle_red"
                    android:id="@+id/ProfileLinearLayout"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_46sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_background"
                        android:id="@+id/photo"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameOfPerson"
                            android:text="Meliha Yılmaz"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ageOfPerson"
                            android:text="52"
                            android:textSize="15sp"
                            android:textColor="@color/black"

                    />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/typeOfBlood"
                            android:text="A RH+"
                            android:textSize="15sp"
                            android:textColor="@color/black"

                    />
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/memories"
                    android:text="@string/memories"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"

            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
            >
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="73dp"
                        android:layout_height="66dp"
                        android:src="@drawable/ic_launcher_background"
                        android:id="@+id/memoriesCircle1"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="73dp"
                        android:layout_height="66dp"
                        android:src="@drawable/ic_launcher_background"
                        android:id="@+id/memoriesCircle2"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="73dp"
                        android:layout_height="66dp"
                        android:src="@drawable/ic_launcher_background"
                        android:id="@+id/memoriesCircle3"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="73dp"
                        android:layout_height="66dp"
                        android:src="@drawable/ic_launcher_background"
                        android:id="@+id/memoriesCircle4"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="73dp"
                        android:layout_height="66dp"
                        android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24"
                        android:id="@+id/seeMoreMemories"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/water"
                            android:text="Su Takibi"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="20dp"
                            android:paddingTop="10dp"

                    />
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"

                    />
                    <Button android:layout_width="57dp"
                            android:layout_height="60dp"
                            android:drawableLeft="@drawable/ic_baseline_add_24"
                            android:background="@drawable/shapecircle"
                    />

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/water"
                        android:id="@+id/water1"
                        android:layout_marginStart="30dp"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/water"
                        android:id="@+id/water2"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/water"
                        android:id="@+id/water3"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/water"
                        android:id="@+id/water4"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/water"
                        android:id="@+id/water5"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/water"
                        android:id="@+id/water6"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/step"
                        android:text="Adım Takibi"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"

                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NumberOfStep"
                        android:text="Adım sayısı:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingStart="76dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NumberOfStepText"
                        android:text="5610000 "
                        android:textColor="@color/black"
                        android:textSize="20sp"


                />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/medicine"
                    android:text="İlaç Takibi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"


            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="@dimen/_80sdp">
                <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="İlaç 1"
                />
                <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="İlaç 2"
                />
                <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="İlaç 3"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Daha fazlasını görmek için tıklayın."
                        android:drawableLeft="@drawable/ic_baseline_add_24"
                        android:paddingStart="5dp"
                        android:textColor="@color/black"
                        android:id="@+id/seeMoreMedication"
                />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coordinatorLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fabCradleMargin="20dp"
                app:fabCradleVerticalOffset="10dp"
                app:fabCradleRoundedCornerRadius="20dp"
                android:scrollbarDefaultDelayBeforeFade="@android:integer/config_longAnimTime"
                android:layout_gravity="bottom">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomNavigationView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/background_transparent"
                    app:menu="@menu/bottom_nav_menu_patient"/>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:contentDescription="@string/app_name"
                app:layout_anchor="@id/bottomAppBar"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
