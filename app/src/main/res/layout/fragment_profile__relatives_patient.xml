<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        android:background="@color/xmlBackground"
             tools:context=".View_RelativesOfThePatient.Profile_RelativesPatient">

   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
   >
       <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/Profile"
               android:textColor="@color/black"
               android:text="@string/profile"
               android:textStyle="bold"
               android:textSize="@dimen/_25ssp"
               android:layout_margin="15dp"
               android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
       />
       <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/EditProfile"
               android:textColor="@color/black"
               android:text="Profili Düzenle"
               android:textStyle="bold"
               android:textSize="@dimen/_25ssp"
               android:visibility="gone"
               android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
               android:layout_marginTop="-60dp"

       />
       <ImageView
           android:id="@+id/imageBack"
           android:layout_width="50dp"
           android:layout_height="42dp"

           android:contentDescription="@string/app_name"
           android:src="@drawable/ic_baseline_edit_24"
           android:tint="#000000"
           android:layout_marginTop="-60dp"
           android:layout_marginStart="@dimen/_250sdp"

   />
       <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/PatientTitle"
               android:textColor="@color/black"
               android:text="@string/patient"
               android:textSize="@dimen/_25ssp"
               android:layout_margin="15dp"
       />

       <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="73dp"
               android:layout_height="66dp"
               android:src="@drawable/me"
               android:id="@+id/PatientPhoto"
               android:layout_marginStart="@dimen/_250sdp"
               android:layout_marginTop="-60dp"
       />
       <TableLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

       >
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/nameOfPatient"
                       android:text="@string/name"
                       android:gravity="center"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/nameofPatientEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/surnameOfPatient"
                       android:text="@string/surname"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"

               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/surnameofPatientEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/groupOfBlood"
                       android:text="Kan grubu"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"

               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/BloodEdittext"
                       android:layout_marginLeft="30dp"

               />
           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/TC"
                       android:text="TC Kimlik "
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"

               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/TCEdittext"
                       android:layout_marginLeft="30dp"
               />
           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/DateofBirth"
                       android:text="Doğum Tarihi"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/DateofBirthEdittext"
                       android:layout_marginLeft="30dp"
                       android:drawableLeft="@drawable/ic_baseline_edit_calendar_24"
               />

           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/weight"
                       android:text="Kilo"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/weightEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/height"
                       android:text="Boy"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/heightEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/sex"
                       android:text="Cinsiyet"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/sexEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>
           <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
               <TextView
                       android:layout_width="170dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/Address"
                       android:text="Adres"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="193dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/AdressEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>

       </TableLayout>
       <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/RelativesTitle"
               android:textColor="@color/black"
               android:text="@string/relativesofpatient"
               android:textSize="@dimen/_25ssp"
               android:layout_margin="15dp"
       />
       <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="73dp"
               android:layout_height="66dp"
               android:src="@drawable/boy"
               android:id="@+id/RelativesOfThePatientPhoto"
               android:layout_marginStart="@dimen/_250sdp"
               android:layout_marginTop="-60dp"
       />
       <TableLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

       >

           <TableRow >
               <TextView
                       android:layout_width="170dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/nameOfRelatives"
                       android:text="@string/name"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="193dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/nameofRelatevesEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/surnameOfRelatives"
                       android:text="@string/surname"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/surnameofRelativesEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/degreeOfRelatives"
                       android:text="Yakınlık Derecesi"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/degreeEdittext"
                       android:layout_marginLeft="30dp"
               />
           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/email"
                       android:text="@string/email"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/emailEdittext"
                       android:layout_marginLeft="30dp"
               />
           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/phoneNumber"
                       android:text="@string/phoneNumber"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"

               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/numberEdittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>
           <TableRow >
               <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/phoneNumber2"
                       android:text="@string/phoneNumber"
                       android:background="@drawable/button_rectangle"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textSize="@dimen/_15ssp"
                       android:textStyle="bold"
               />
               <EditText
                       android:layout_width="180dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/number2Edittext"
                       android:layout_marginLeft="30dp"


               />

           </TableRow>


       </TableLayout>
       <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="73dp"
               android:layout_height="66dp"
               android:src="@drawable/ic_sharp_done_outline_24"
               android:id="@+id/recordButton"
               android:layout_marginStart="@dimen/_200sdp"
               android:visibility="gone"

       />
       <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="73dp"
               android:layout_height="66dp"
               android:src="@drawable/ic_twotone_close_24"
               android:id="@+id/closeButton"
               android:layout_marginStart="@dimen/_50sdp"
               android:layout_marginTop="-60dp"
               android:visibility="gone"
       />
   </LinearLayout>

</ScrollView>