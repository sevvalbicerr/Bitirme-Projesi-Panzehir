<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/xmlBackground"
            tools:context=".view_Patient.quiz.Quiz"
            android:orientation="vertical"
    ><TextView
            android:id="@+id/numberOfQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="25dp"
            android:text="1/10"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
    />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:src="@drawable/glass"
                android:id="@+id/imageQuestion"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:id="@+id/questionText"
                  android:text="Soru"
                  android:textColor="@color/black"

                  android:background="@drawable/button_rectangle_red"
                  android:layout_marginTop="20dp"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:paddingStart="20dp"
                  android:paddingTop="6dp"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerRaioGroup"
        >
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/A"
                    android:background="@drawable/quizzz"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="20dp"
                    android:layout_marginStart="10dp"
            />
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/B"
                    android:background="@drawable/quizzz"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="20dp"
                    android:layout_marginStart="10dp"

            />
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/C"
                    android:background="@drawable/quizzz"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="20dp"
                    android:layout_marginStart="10dp"

            />
            <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/D"
                    android:background="@drawable/quizzz"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="20dp"
                    android:layout_marginStart="10dp"
            />
        </RadioGroup>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nextQuestionButton"
                android:text="Soruyu geÃ§"
                android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/_20sdp"
                android:backgroundTint="#90AAA2A2"
                android:layout_marginBottom="@dimen/_70sdp"
                app:cornerRadius="15dp"/>

    </LinearLayout>

</ScrollView>
