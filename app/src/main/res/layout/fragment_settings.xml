<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".View_RelativesOfThePatient.Settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xmlBackground"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SettingsTitle"
                android:textColor="@color/black"
                android:text="Ayarlar"
                android:textStyle="bold"
                android:textSize="@dimen/_25ssp"

                android:layout_margin="15dp"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Account"
                android:textColor="@color/black"
                android:text="Hesap Bilgileri"
                android:textStyle="bold"

                android:textSize="@dimen/_20ssp"
                android:layout_marginStart="15dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:textColor="@color/black"
                android:text="@string/email"
                android:textSize="@dimen/_20ssp"
                android:paddingStart="@dimen/_20sdp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_rectangle"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Common"
                android:textColor="@color/black"
                android:text="Genel"
                android:textStyle="bold"

                android:textSize="@dimen/_20ssp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notification"
                android:textColor="@color/black"
                android:text="Bildirimler"
                android:textSize="@dimen/_20ssp"
                android:paddingStart="@dimen/_20sdp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_rectangle"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Privacy"
                android:textColor="@color/black"
                android:text="Gizlilik"
                android:textStyle="bold"

                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationOfPrivacy"
                android:textColor="@color/black"
                android:text="Veri izinleri"

                android:textSize="@dimen/_20ssp"
                android:paddingStart="@dimen/_20sdp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_rectangle"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AboutApptitle"
                android:textColor="@color/black"
                android:text="Bilgi"
                android:textStyle="bold"

                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="15dp"

                android:layout_marginStart="15dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AboutApp"
                android:textColor="@color/black"
                android:text="Panzehir Hakkında"
                android:textSize="@dimen/_20ssp"
                android:paddingStart="@dimen/_20sdp"
                android:layout_marginStart="15dp"


                android:layout_marginEnd="15dp"
                android:background="@drawable/button_rectangle"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/help"
                android:textColor="@color/black"
                android:text="Yardım "
                android:textSize="@dimen/_20ssp"
                android:paddingStart="@dimen/_20sdp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_rectangle"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exittitle"
                android:textColor="@color/black"
                android:text="Çıkış Yap"
                android:layout_marginTop="15dp"
                android:textStyle="bold"

                android:textSize="@dimen/_20ssp"
                android:layout_marginStart="15dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exit"
                android:textColor="@color/black"
                android:text="Oturumu Kapat"
                android:textSize="@dimen/_20ssp"
                android:paddingStart="@dimen/_20sdp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_rectangle"
                android:layout_marginBottom="@dimen/_80sdp"
        />


    </LinearLayout>
</ScrollView>
